<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>WonderfulTools.WonderfulCaptcha</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>WonderfulCaptcha</Title>
    <Description>WonderfulCaptcha designed to help developers implement a user-friendly and secure captcha solution in their applications. This package provides the necessary tools and functionalities to integrate captchas into web forms or other interfaces, helping to prevent spam, bots, and other unwanted automated activities. With WonderfulCaptcha, developers can enhance the security and usability of their applications by adding an effective and customizable captcha system.</Description>
    <Version>1.0.0</Version>
    <Authors>WonderfulTools</Authors>
    <Product>WonderfulCaptcha</Product>
    <Copyright></Copyright>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>https://github.com/WonderfulTools/Wonderful_Captcha</RepositoryUrl>
    <PackageTags>Captcha ,TextCaptcha </PackageTags>
    <Company>WonderfulTools</Company>
    <PackageIcon></PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.0" />
	<PackageReference Include="SixLabors.ImageSharp" Version="3.1.4" />
	<PackageReference Include="SixLabors.ImageSharp.Drawing" Version="2.1.0" />
  </ItemGroup>




</Project>
